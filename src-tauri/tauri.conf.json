{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "myTvTauri",
  "version": "0.1.0",
  "identifier": "com.myTvTauri.kaze",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "iptvPlayer",
        "label": "main",
        "width": 900,
        "height": 600,
        "minHeight": 600,
        "minWidth": 900,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": ["msi", "app", "dmg"],
    "windows": {
      "wix": {
        "language": "zh-CN"
      }
    }
  }
}
